<ul class="message-lists">
    <li class="message-list">
      <div class='message-detail'>
        <div class='message-user'><%= message.user.name %></div>
        <div class="message-date"><%= l message.created_at %></div>
      </div>
      <div class="message"><%= message.content %></div>
    </li>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</ul>
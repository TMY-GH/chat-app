<div class='main-header'>
  <div class='room-name'>
    <%= @room.name %>
  </div>
  <div class="destroy-room">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class='main-chats'>
  <%= render partial: 'message', collection: @messages %>
</div>
<div class='main-footer'>
  <%= form_with(model: [@room, @message], local: true, class: "form") do |form| %>
    <div class='message-form'>
      <%= form.text_field :content, placeholder: "type a message", class: "text-message" %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= form.file_field :image, class: "hidden" %>
      </label>
    </div>
    <%= form.submit "送信", class: "submit-btn" %>
  <% end %>
</div>